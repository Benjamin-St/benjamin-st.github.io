@import url(http://fonts.googleapis.com/css?family=Lato:100,300,400,700);

body
	// position: fixed
	// left:0px
	// right:0px
	// top:0px
	// bottom: 0px
	// overflow-y:scroll
	//width: 100vw
	margin: 0px
	font-family: 'Lato', sans-serif
	font-weight: 300
	color: #4A4A4A

.top-header
	// height: 70vh
	width: 100%
	background: url('./pics/background.jpg') no-repeat center; 
	background-size: cover
	background-position: top
	
	display:flex
	justify-content: center
	align-items: center
	
	.container
		display: flex
		flex-direction: column
		align-items: center
		justify-content: space-around
		text-align: center
		color: white
		padding: 2.5% 100px
		margin: 5% 0
		width: 100%
		// min-height: 75%
		background-color: alpha(black, .5)

		.title
			font-size: 80
		.paragraph
			font-size: 40
		.button
			border-radius: 5px
			background-color: alpha(#B8E986, .5)
			padding: 10 20
			font-size: 30
		.links
			margin-top: 20px
			display: flex
			flex-direction: row
			justify-content: space-between
			width: 100%
			
			a
				text-decoration: none
				color: inherit

			
			.link
				font-size: 30
				// margin: 0 30
p, li
	line-height: 150%
.page
	width: 100%
	padding: 30px 100px
	box-sizing:border-box

	> *
		width: 100%
	.title
		font-size:40px
		text-align: left
	.page-content
		margin: 10 20%


.about-page > .content
	display: flex
	flex-direction: row
	align-items: space-around
	justify-content: space-around
	
	> div
		width: 50%
		display: flex
		flex-direction: column
		justify-content: center
	.left
		padding-right: 5%
	.right
		display: flex
		flex-direction: row
		align-items: center
		justify-content: center

.label-container
	display:flex
	flex-direction: row
	justify-content: center
	flex-wrap:wrap
	padding: 10px 50px
	.label
		padding: 5px 10px
		margin: 5px
		border-radius: 7.5px
		border: 1px solid #979797
		// width: 200px
		// height: 50px

		display:flex
		flex-direction:column
		justify-content: center
		
		cursor: pointer

		opacity: .25


		*
			text-align: center
			
		.title
			font-size:15px
		.subtitle
			margin: 0 10
			font-size: 12px

		&:hover, &.selected
			opacity: 1

@media screen and (max-width: 800px), screen and (max-device-width: 800px)

	.top-header
		>.container
			padding: 10px 0px
		.title
			padding: 0px
			font-size: 60px !important
		.paragraph
			font-size: 22px !important
	.page-content, .page
		margin: 0px !important
	
	.page
		padding: 10px
		
	.about-page > .content
		flex-direction: column !important
		margin: 0px
		div
			width: auto
			margin: 0px !important
			padding: 0px !important
		.right
			visibility: hidden
			height: 0px
	.label
		.title
			font-size: 200% !important
		.subtitle
			font-size: 125% !important
			